/* Oasis 目标检测系统 - 现代化样式表 */

/* 主窗口样式 */
QMainWindow {
    background-color: #F2F2F7;
    color: #1C1C1E;
}

/* 组框样式 */
QGroupBox {
    font-weight: bold;
    font-size: 14px;
    border: 1px solid #C7C7CC;
    border-radius: 10px;
    margin-top: 15px;
    padding-top: 15px;
    background-color: rgba(255, 255, 255, 0.95);
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 10px 0 10px;
    color: #007AFF;
    font-weight: bold;
}

/* 按钮样式 */
QPushButton {
    border: none;
    border-radius: 8px;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 500;
    min-height: 20px;
}

QPushButton:focus {
    outline: none;
}

/* 主按钮样式 */
QPushButton[class="primary"] {
    background-color: #007AFF;
    color: white;
}

QPushButton[class="primary"]:hover {
    background-color: #0056D3;
}

QPushButton[class="primary"]:pressed {
    background-color: #004A9F;
}

QPushButton[class="primary"]:disabled {
    background-color: #C7C7CC;
    color: #8E8E93;
}

/* 次要按钮样式 */
QPushButton[class="secondary"] {
    background-color: #F2F2F7;
    color: #007AFF;
    border: 1px solid #C7C7CC;
}

QPushButton[class="secondary"]:hover {
    background-color: #E5E5EA;
}

QPushButton[class="secondary"]:pressed {
    background-color: #D1D1D6;
}

/* 标签样式 */
QLabel {
    color: #1C1C1E;
}

QLabel[class="title"] {
    font-size: 18px;
    font-weight: bold;
    color: #1C1C1E;
}

QLabel[class="subtitle"] {
    font-size: 14px;
    color: #8E8E93;
}

/* 列表样式 */
QListWidget {
    border: 1px solid #C7C7CC;
    border-radius: 8px;
    background-color: white;
    padding: 5px;
    outline: none;
}

QListWidget::item {
    padding: 8px 12px;
    margin: 2px;
    border-radius: 6px;
    border: none;
}

QListWidget::item:selected {
    background-color: #007AFF;
    color: white;
}

QListWidget::item:hover {
    background-color: #F2F2F7;
}

/* 复选框样式 */
QCheckBox {
    spacing: 8px;
    color: #1C1C1E;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 4px;
    border: 2px solid #C7C7CC;
    background-color: white;
}

QCheckBox::indicator:checked {
    background-color: #007AFF;
    border-color: #007AFF;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTAiIGhlaWdodD0iOCIgdmlld0JveD0iMCAwIDEwIDgiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik04LjUgMUwzLjUgNkwxLjUgNCIgc3Ryb2tlPSJ3aGl0ZSIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
}

QCheckBox::indicator:hover {
    border-color: #007AFF;
}

/* 滑块样式 */
QSlider::groove:horizontal {
    border: none;
    height: 4px;
    background-color: #C7C7CC;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #007AFF;
    border: none;
    width: 20px;
    height: 20px;
    border-radius: 10px;
    margin: -8px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #0056D3;
}

/* 数值框样式 */
QSpinBox {
    border: 1px solid #C7C7CC;
    border-radius: 6px;
    padding: 6px;
    background-color: white;
    min-width: 60px;
}

QSpinBox:focus {
    border-color: #007AFF;
}

/* 下拉框样式 */
QComboBox {
    border: 1px solid #C7C7CC;
    border-radius: 6px;
    padding: 6px 12px;
    background-color: white;
    min-width: 120px;
}

QComboBox:focus {
    border-color: #007AFF;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOCIgdmlld0JveD0iMCAwIDEyIDgiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik0xIDFMNiA2TDExIDEiIHN0cm9rZT0iIzhFOEU5MyIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
}

/* 状态栏样式 */
QStatusBar {
    background-color: #F2F2F7;
    border-top: 1px solid #C7C7CC;
    color: #8E8E93;
    font-size: 12px;
}

/* 分割器样式 */
QSplitter::handle {
    background-color: #C7C7CC;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

/* 滚动条样式 */
QScrollBar:vertical {
    background-color: #F2F2F7;
    width: 8px;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background-color: #C7C7CC;
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #8E8E93;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

/* 文本编辑框样式 */
QTextEdit {
    border: 1px solid #C7C7CC;
    border-radius: 8px;
    background-color: white;
    padding: 8px;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Consolas', monospace;
    font-size: 12px;
}

QTextEdit:focus {
    border-color: #007AFF;
}

/* 工具提示样式 */
QToolTip {
    background-color: #1C1C1E;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 6px 8px;
    font-size: 12px;
}
